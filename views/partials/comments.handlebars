<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="comment-info">
        <p></p>
      </div>
      <div class="comment-body">
        <p>{{comment_text}}</p>
        <p>
          --{{user.username}}
          on
          {{format_date created_at}}</p>
      </div>
    </section>
  {{/each}}
</div>